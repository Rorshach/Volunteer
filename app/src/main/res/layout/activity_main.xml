<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2edeec"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.google.android.gms.common.SignInButton
        android:id="@+id/btn_sign_in"
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="68dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/Logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="113dp"
        android:text="Volunteer"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ffffff" />

    <Button
        android:id="@+id/signUpButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="?android:attr/selectableItemBackground"
        android:onClick="enterButton"
        android:text="Enter"
        android:textColor="#ffffff" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:id="@+id/logoutBtn"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:width="400dp"
        android:onClick="logoutBtn" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="ozymandias.volunteer.MainFragment"
        android:id="@+id/fragment"
        android:layout_alignBottom="@+id/btn_sign_in"
        android:layout_alignRight="@+id/logoutBtn"
        android:layout_alignEnd="@+id/logoutBtn"
        tools:layout="@layout/fragment_main" />

</RelativeLayout>
